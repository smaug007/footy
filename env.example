# China Super League Corner Prediction System - Environment Configuration
# Copy this file to .env and update the values as needed

# =============================================================================
# API CONFIGURATION
# =============================================================================

# API-Football Configuration
# Get your API key from: https://www.api-football.com/
API_FOOTBALL_KEY=your_api_football_key_here
API_FOOTBALL_HOST=v3.football.api-sports.io

# API Rate Limits (adjust based on your subscription)
API_CALLS_PER_DAY=7500
API_CALLS_PER_MINUTE=300

# =============================================================================
# FLASK APPLICATION CONFIGURATION
# =============================================================================

# Flask Environment
# Options: development, production, testing
FLASK_ENV=development

# Flask Debug Mode
# Set to False in production
FLASK_DEBUG=True

# Secret Key for Flask Sessions
# Generate a secure random key for production
SECRET_KEY=dev-secret-key-change-in-production

# Application Host and Port
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite Database Path
# Use absolute path for production
DATABASE_PATH=corners_prediction.db

# =============================================================================
# PREDICTION SYSTEM CONFIGURATION
# =============================================================================

# China Super League ID (API-Football)
CHINA_SUPER_LEAGUE_ID=169

# Prediction Parameters
MIN_GAMES_FOR_PREDICTION=3
MAX_GAMES_FOR_ANALYSIS=20
TARGET_ACCURACY=0.90
CORNER_TOLERANCE=1

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

# Cache Settings
CACHE_TIMEOUT_HOURS=6

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production-specific settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=False
# LOG_LEVEL=WARNING

# =============================================================================
# IMPORTANT NOTES
# =============================================================================
#
# 1. Never commit the actual .env file to version control
# 2. Use strong, unique secret keys in production
# 3. Regularly rotate API keys and secrets
# 4. The system currently uses hardcoded API key in config.py
#    Update config.py for production use
#
# For more information, see the deployment documentation.
# =============================================================================